{% set fullname = userLogged.name ~ " " ~ userLogged.lastname %}

<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0">

		{# Bootstrap styles #}
		<link rel="shortcut icon" href="/public/img/san_jose_obrero.png" type="image/x-icon">
		<link rel="stylesheet" href="/public/styles/bootstrap.css">
		<link rel="stylesheet" href="/public/styles/style.css">
		<link rel="stylesheet" href="/public/styles/all.min.css">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

		{# Sí es el login mostramos el fondo de inicio de sesión, sino mostramos el de recuperar contraseña #}
		{% if wallpaper == 'bg' %}
			<link rel="stylesheet" href="/public/styles/bg.css">
		{% elseif wallpaper == 'color' %}
			<link rel="stylesheet" href="/public/styles/color.css">
		{% endif %}

		<title>Discipline Observer |
			{{title}}</title>
	</head>
	<body>
		<div
			class="container">

			{# Nabvar brand #}
			<nav class="navbar navbar-expand-sm navbar-dark border-bottom fixed-top bg-observer">
				<div class="container-fluid mx-2">
					<a href="/" class="navbar-brand">
						<img class="img-fluid rounded-1" src="/public/img/observer.png" alt="disciplineobserver logotype" width="80" height="80">
					</a>

					<div class="collapse navbar-collapse">
						<h2 class="{% if userLogged %}display-3 fw-bold{% else %}display-5 fw-normal{% endif %} pe-5 mx-auto">
							{% if userLogged %}
								EL OBSERVADOR
							{% else %}
								San José Obrero
							{% endif %}
						</h2>

						{% if userLogged is defined %}
							<div class="position-relative">
								<img class="img-fluid rounded-circle" src="/public/img/avatar.png" alt="{{userLogged.role}} avatar" width="60" height="60" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="{{fullname}}, <b>{{userLogged.role}}</b>">

								<span class="position-absolute top-100 start-100 translate-middle p-2 bg-success border border-light rounded-circle custom-badge" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Active">
									<span class="visually-hidden">{{userLogged.role}}
										is active!</span>
								</span>
							</div>
						{% endif %}

					</div>
				</div>
			</nav>

			{# Navbar funciones del observador #}
			<nav class="navbar navbar-expand-xl navbar-dark border-top fixed-top bg-observer">

				<div class="container-fluid mx-2">

					{% if userLogged.permissions is defined %}
						<button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarDisciplineObserver">
							<span class="navbar-toggler-icon"></span>
						</button>

						<div class="collapse navbar-collapse" id="navbarDisciplineObserver">

							<ul class="navbar-nav nav nav-pills nav-fill my-4 my-lg-0">

								{% if 'admin_students' in userLogged.permissions or 'admin_teachers' in userLogged.permissions %}
									<li class="nav-item dropdown">
										<a class="nav-link{% if aria_current[0] == 'admin' %} active{% endif %} dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
											<i class="fa fa-user-shield"></i>
											Administración
										</a>

										<ul class="dropdown-menu">
											<li>
												<a class="dropdown-item{% if aria_current[1] == 'teachers' %} active{% endif %}" href="/administrar/profesores">
													<i class="fa fa-graduation-cap"></i>
													Docentes
												</a>
											</li>

											<li><hr class="dropdown-divider"></li>

											<li>
												<a class="dropdown-item{% if aria_current[1] == 'students' %} active{% endif %}" href="/administrar/estudiantes">
													<i class="fa fa-user-graduate"></i>
													Estudiantes
												</a>
											</li>

											<li><hr class="dropdown-divider"></li>

											<li>
												<a class="dropdown-item{% if aria_current[1] == 'parents' %} active{% endif %}" href="/administrar/padres-de-familia">
													<i class="fa fa-users"></i>
													Padres de familia
												</a>
											</li>
										</ul>
									</li>
								{% endif %}


								{% if 'make_notation' in userLogged.permissions %}
									<li class="nav-item">
										<a class="nav-link{% if aria_current == 'make-notation' %} active{% endif %}" href="/hacer/anotaciones">
											<i class="fa fa-comment"></i>
											Hacer una anotación en el observador</a>
									</li>
								{% endif %}

								{% if 'cite_parents' in userLogged.permissions %}
									<li class="nav-item">
										<a class="nav-link{% if aria_current == 'cite-parents' %} active{% endif %}" href="/citacion/padres">
											<i class="fa fa-envelope"></i>
											Citar padres de familia</a>
									</li>
								{% endif %}

								{% if 'view_cite_parents' in userLogged.permissions %}
									<li class="nav-item">
										<a class="nav-link{% if aria_current == 'view-cite-parents' %} active{% endif %}" href="/ver/citacion/padres">
											<i class="fa fa-eye"></i>
											Ver citación a padres</a>
									</li>
								{% endif %}

								{% if 'view_observer' in userLogged.permissions and 'parent' not in userLogged.roles %}
									<li class="nav-item">
										<a class="nav-link{% if aria_current == 'view-observer' %} active{% endif %}" href="/ver/observador">
											<i class="fa fa-search"></i>
											Ver observador</a>
									</li>
								{% endif %}

								{% if userLogged.permissions is defined %}
									<li class="nav-item">
										<a class="nav-link" href="/inicio">
											<i class="fa fa-home"></i>
											Volver al menu</a>
									</li>
								{% endif %}

								{% if userLogged.permissions is defined %}
									<li class="nav-item">
										<form action="/salir" method="post" class="d-inline">
											<button type="submit" onclick="return confirm('Estás seguro que deseas cerrar sesión?')" class="nav-link">
												<i class="fa fa-sign-out-alt"></i>
												Cerrar sesión</button>
										</form>
									</li>
								{% endif %}
							</ul>

						</div>
					{% endif %}

				</div>
			</nav>

			{% block content %}
				<!-- Aquí van las demas vistas del observador -->
			{% endblock %}
		</body>
	</body>
</html></body></html></div>{# Bootstrap scripts #}<script src="/public/scripts/bootstrap.bundle.min.js"></script><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>{# Sí el usuario está loggeado incluimos este script que activa los tooltips de bootstrap para mostrar información al pasar el mouse #}{% if userLogged is defined %}<script src="/public/scripts/addons.js"></script>{% endif %}<svg xmlns="http://www.w3.org/2000/svg" style="display: none;"><symbol id="check2" viewbox="0 0 16 16"><path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/></symbol><symbol id="circle-half" viewbox="0 0 16 16"><path d="M8 15A7 7 0 1 0 8 1v14zm0 1A8 8 0 1 1 8 0a8 8 0 0 1 0 16z"/></symbol><symbol id="moon-stars-fill" viewbox="0 0 16 16"><path d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278z"/><path d="M10.794 3.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.579.924 1.097 1.097l1.162.387a.217.217 0 0 1 0 .412l-1.162.387a1.734 1.734 0 0 0-1.097 1.097l-.387 1.162a.217.217 0 0 1-.412 0l-.387-1.162A1.734 1.734 0 0 0 9.31 6.593l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387a1.734 1.734 0 0 0 1.097-1.097l.387-1.162zM13.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.156 1.156 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.156 1.156 0 0 0-.732-.732l-.774-.258a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732L13.863.1z"/></symbol><symbol id="sun-fill" viewbox="0 0 16 16"><path d="M8 12a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1