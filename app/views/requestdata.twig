{% extends '/layout/layout.twig' %}

{% block content %}
  <div class="row">
    <div class="col-md-5 mx-auto">
      {% if error is defined %}
				<div class="alert alert-danger text-center">
					Error: {{error}}
				</div>
			{% endif %}
      {% if success is defined %}
				<div class="alert alert-success text-center">
					Mensaje: {{success}}
				</div>
			{% endif %}
      <div class="card card-body">
        <form method="post" class="row g-3">
          <h1 class="mt-3">Crear cuenta</h1>
          <div class="col-md-12">
            <div class="form-floating">
              <select name="identification" class="form-select" required>
								<option value="">Seleccione</option>
								<option value="teacher">Docente</option>
								<option value="parent">Padre de familia</option>
							</select>
							<label for="identification" class="form-label">Seleccione su identificaci칩n</label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-floating">
              <input type="email" name="email" class="form-control" placeholder="Ingrese el correo" required>
              <label for="email" class="form-label">Email</label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-floating">
              <input type="password" name="password" class="form-control" placeholder="Ingresa la contrase침a" required>
              <label for="password" class="form-label">Contrase침a</label>
            </div>
          </div>
          <div class="col-md-12">
          {% if success is not defined %}
            <a href="/registro/datos-personales" class="btn btn-secondary mb-2">Volver</a>
            <button class="btn btn-primary mb-2">Registrarme</button>
          {% endif %}
          {% if success is defined %}
            <a href="/" class="btn btn-success mb-2">Ir a iniciar sesi칩n</a>
          {% endif %}
        </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}